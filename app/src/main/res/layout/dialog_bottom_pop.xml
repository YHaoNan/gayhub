<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/top_round"
    android:padding="10dp"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/dbp_search"
        android:text="搜索此书"
        android:layout_alignParentRight="true"
        android:drawableRight="@drawable/ic_call_made_black_24dp"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="25dp"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@+id/dbp_search"
        android:orientation="vertical" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="centerCrop"
            android:layout_margin="10dp"
            android:src="@color/colorPrimary"
            android:id="@+id/dbp_img"
            android:layout_width="100dp"
            android:layout_height="130dp"/>
        <TextView
            android:id="@+id/dbp_name"
            android:textStyle="bold"
            android:text="Android"
            android:textColor="@android:color/black"
            android:layout_alignTop="@id/dbp_img"
            android:layout_toRightOf="@+id/dbp_img"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/dbp_author"
            android:textStyle="bold"
            android:text="lilpig"
            android:layout_marginRight="10dp"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/dbp_img"
            android:layout_below="@+id/dbp_name"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/dbp_description"
            android:layout_marginRight="10dp"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/dbp_img"
            android:scrollbars="vertical"
            android:maxHeight="200dp"
            android:layout_below="@+id/dbp_author"
            android:layout_marginTop="10dp"
            android:text="Asdfadsfjiasdjfioasdjfioajsdfioajsdiofjaiosdfjiaodsjfioasdjf"
            android:layout_alignBottom="@+id/ibl_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>